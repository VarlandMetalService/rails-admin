<% flash.each do |message_type, message| -%>
    <% case message_type -%>
    <% when 'notice' -%>
      <% message_type = "primary" -%>
    <% when 'alert' -%>
      <% message_type = "warning" -%>
    <% end -%>
    <div class="alert alert-<%= message_type %> mt-0 mb-3"
          role="alert">
      <strong><%= message.html_safe %></strong>
      <button type="button"
              class="close text-<%= message_type %>"
              data-dismiss="alert"
              aria-label="Close">
        <span aria-hidden="true"><%= fa_icon 'times' %></span>
      </button>
    </div>
  <% end -%>